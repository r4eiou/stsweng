<link rel = "stylesheet" type = "text/css" href = "/css/back-button.css">
<script src="/js/header.js" type="text/javascript"></script>

<div class = "main-container">
    <div class= "header" id="header">
        <div class = "header-left">
            <a href="/admin-homepage" class="header-logo-link" id="home-link1"><img src="/images/logo.png" class="header-logo"></a>
            <a href="/admin-homepage" class="header-home" id="home-link2"><h3>Home</h3></a>
        </div>
        
        <div class = "header-title">
            <div class = "header-text">
                <h3>Sangguniang Barangay ng Parang</h3>
                <h5>Marikina City</h5>
            </div>
        </div>
        <div class="header-right">
            <div class="header-user-profile">
                <span class="header-user-profile-text" id="profile-text">Admin</span>
                <img src="/images/admin-profile.png" class="header-user-profile" id="profile-img">
            </div>
            <button type="button" class="header-logout-btn" id="logout-btn">Logout</button>
        </div>
    </div>

    

    <div class = "page-content-container" id="edit-case-page">
        <div class = "back-and-title">
            <div class="upper-container" id="form-upper-container">
                <a href="/admin-lupon-db-view" class="back-button" id="white-back-button">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" fill="white" class="size-4">
                        <path fill-rule="evenodd" d="M1 8a7 7 0 1 0 14 0A7 7 0 0 0 1 8Zm10.25.75a.75.75 0 0 0 0-1.5H6.56l1.22-1.22a.75.75 0 0 0-1.06-1.06l-2.5 2.5a.75.75 0 0 0 0 1.06l2.5 2.5a.75.75 0 1 0 1.06-1.06L6.56 8.75h4.69Z" clip-rule="evenodd"></path>
                    </svg>
                    Back
                </a>
            </div>
            <h1 id = "lupon-case-title">Editing Lupon Case Details</h1>
        </div>
        <div class = "form-encasing-container">
            <div class = "form-actual-container">

                <form action="/submit-edit-lupon-case" method="post" id="case-form" class="case-form">
                    <!-- Hidden input for _id -->
                    <input type="hidden" name="_id" value="{{cases._id}}">   

                    <div class = "form-section" id = "basic-info">
                        <div class = "column-section">
                            <label for="case-title" class ="bold-label">Case Title</label>
                            <input class = "case-title-input" id="case-title" type = "text" value= "{{cases.CaseTitle}}" name="CaseTitle" >
                        </div>
                        <div class = "column-section">
                            <label for="case-type" class ="bold-label">Case Type</label>
                            <input class="case-type-input" type = "text" id = "case-type" value="{{cases.CaseType}}" name="CaseType">
                        </div>
                        <div class = "column-section1">
                            <label for="case-form" class ="bold-label">Status</label>
                            <select id="statusDropdown" name="Status" class="status-dropdown-view-edit">
                                <option value="" disabled hidden>Select Status</option>
                                <option value="Resolved" {{#checkStatus cases.Status}} selected {{/checkStatus}}>Resolved</option>
                                <option value="Ongoing" {{#unless_checkStatus cases.Status}} selected {{/unless_checkStatus}}>Ongoing</option>
                            </select>
                        </div>
                    </div>

                    <span class = "section-name">Respondent Information</span>
                    <div class = "form-section" id = "respondent-info">
                        <div class = "input-pair">
                            <label for="last-name-input">Last Name</label>
                            <input class = "last-name-input" type ="text" value="{{cases.RespondentInfo.LastName}}" name="respondentLastName" >
                        </div>
                        <div class = "input-pair">
                            <label for="middle-initial-input">Middle Initial</label>
                            <input class = "middle-name-input" type = "text" value="{{cases.RespondentInfo.MiddleInitial}}" maxlength="1" name="respondentMiddleInitial">
                        </div>
                        <div class = "input-pair">
                            <label for="first-name-input">First Name</label>
                            <input class = "first-name-input" type = "text" value="{{cases.RespondentInfo.FirstName}}" name="respondentFirstName" >
                        </div>
                    </div>

                    <span class = "section-name">Complainer Information</span>
                    <div class = "form-section" id = "complainer-info">
                        <div class = "input-pair">
                            <label for="last-name-input">Last Name</label>
                            <input class = "last-name-input" type ="text" value="{{cases.ComplainerInfo.LastName}}" name="complainerLastName" >
                        </div>
                        <div class = "input-pair">
                            <label for="middle-initial-input">Middle Initial</label>
                            <input class = "middle-name-input" type = "text" value="{{cases.ComplainerInfo.MiddleInitial}}" name="complainerMiddleInitial" maxlength="1" >
                        </div>
                        <div class = "input-pair">
                            <label for="first-name-input">First Name</label>
                            <input class = "first-name-input" type = "text" value="{{cases.ComplainerInfo.FirstName}}" name="complainerFirstName" >
                        </div>
                    </div>

                    <span class = "section-name">Mediation Information</span>
                    <div class = "form-section" id = "mediation-info">
                        <div class = "input-pair">
                            <label for="last-name-input">Last Name</label>
                            <input class = "last-name-input" type ="text" value="{{cases.MediationInfo.LastName}}" name="MediationLastName" >
                        </div>
                        <div class = "input-pair">
                            <label for="middle-initial-input">Middle Initial</label>
                            <input class = "middle-name-input" type = "text" value="{{cases.MediationInfo.MiddleInitial}}" name="MediationMiddleInitial" maxlength="1">
                        </div>
                        <div class = "input-pair">
                            <label for="first-name-input">First Name</label>
                            <input class = "first-name-input" type = "text" value="{{cases.MediationInfo.FirstName}}" name="MediationFirstName" >
                        </div>
                    </div>

                    <span class = "section-name">Consilation Information</span>
                    <div class = "form-section" id = "consilation-information">
                        <div class = "input-pair">
                            <label for="last-name-input">Last Name</label>
                            <input class = "last-name-input" type ="text" value="{{cases.ConciliationInfo.LastName}}" name="ConciliationLastName" >
                        </div>
                        <div class = "input-pair">
                            <label for="middle-initial-input">Middle Initial</label>
                            <input class = "middle-name-input" type = "text" value="{{cases.ConciliationInfo.MiddleInitial}}" name="ConciliationMiddleInitial" maxlength="1" >
                        </div>
                        <div class = "input-pair">
                            <label for="first-name-input">First Name</label>
                            <input class = "first-name-input" type = "text" value="{{cases.ConciliationInfo.FirstName}}" name="ConciliationFirstName" >
                        </div>
                    </div>

                    <span class ="section-name">Case</span>
                    <div class = "form-section" id="location">
                        <div class = "input-pair">
                            <textarea class = "location-input" id="case-description" type = "text" name="Case" >{{cases.Case}}</textarea>
                        </div>
                    </div>

                </form>

            </div>  
        </div>
        
        <div class = "buttons-container">
            <button type="button" id="saveButtonLupon"       class="form-btn save">      <img src="/images/form-check.png"><span>Save Changes</span></button>
            <button type="button" id="discardButtonLupon"    class="form-btn discard">   <img src="/images/form-trash.png"><span>Discard Changes</span></button>
        </div>
    </div>
</div>