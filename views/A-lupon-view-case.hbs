<link rel = "stylesheet" type = "text/css" href = "/css/back-button.css">
<script src="/js/header.js" type="text/javascript"></script>

<div class = "main-container">
    <div class= "header" id="header">
        <div class = "header-left">
            <a href="/admin-homepage" class="header-logo-link" id="home-link1"><img src="/images/logo.png" class="header-logo"></a>
            <a href="/admin-homepage" class="header-home" id="home-link2"><h3>Home</h3></a>
        </div>
        
        <div class = "header-title">
            <div class = "header-text">
                <h3>Sangguniang Barangay ng Parang</h3>
                <h5>Marikina City</h5>
            </div>
        </div>
        <div class="header-right">
            <div class="header-user-profile">
                <span class="header-user-profile-text" id="profile-text">Admin</span>
                <img src="/images/admin-profile.png" class="header-user-profile" id="profile-img">
            </div>
            <button type="button" class="header-logout-btn" id="logout-btn">Logout</button>
        </div>
    </div>

    <div class = "page-content-container" id="view-case-page">
        <div class="back-and-title">
            <div class="upper-container" id="form-upper-container">
                <a href="/admin-lupon-db-view" class="back-button" id="black-back-button">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" fill="black" class="size-4">
                        <path fill-rule="evenodd" d="M1 8a7 7 0 1 0 14 0A7 7 0 0 0 1 8Zm10.25.75a.75.75 0 0 0 0-1.5H6.56l1.22-1.22a.75.75 0 0 0-1.06-1.06l-2.5 2.5a.75.75 0 0 0 0 1.06l2.5 2.5a.75.75 0 1 0 1.06-1.06L6.56 8.75h4.69Z" clip-rule="evenodd"></path>
                    </svg>
                    Back
                </a>
            </div>
            <h1 id = "lupon-case-title">Lupon Case Details</h1>
        </div>

        <div class = "form-encasing-container">
            <div class = "form-actual-container">
                {{!-- read only form : for viewing --}}
                <form id="case-form" class="case-form">

                    <div class = "form-section" id = "basic-info">
                        <div class = "column-section">
                            <label for="case-title" class ="bold-label">Case Title</label>
                            <input class = "case-title-input" id="case-title" type = "text" placeholder= "Case Title" value="{{cases.CaseTitle}}" readonly>
                        </div>
                        <div class = "column-section">
                            <label for="case-type" class ="bold-label">Case Type</label>
                            <input class="case-type-input" type = "text" id = "case-type" placeholder="Case Type" value="{{cases.CaseType}}" readonly>
                        </div>
                        <div class = "column-section1">
                            <label for="case-form" class ="bold-label">Status</label>
                            {{#checkStatus cases.Status}}
                                <select name="case-form" class="status-dropdown-view" readonly>
                                    <option value="" disabled hidden>Select Status</option>
                                    <option value="1" selected>Resolved</option>
                                    <option value="0">Ongoing</option>
                                </select>
                            {{else}}
                                <select name="case-form" class="status-dropdown-view" readonly>
                                    <option value="" disabled hidden>Select Status</option>
                                    <option value="1">Resolved</option>
                                    <option value="0" selected>Ongoing</option>
                                </select>
                            {{/checkStatus}}
                        </div>
                    </div>

                    <span class = "section-name">Respondent Information</span>
                    <div class = "form-section" id = "respondent-info">
                        <div class = "input-pair">
                            <label for="last-name-input">Last Name</label>
                            <input class = "last-name-input" type ="text" placeholder="Last Name" value="{{cases.RespondentInfo.LastName}}" readonly>
                        </div>
                        <div class = "input-pair">
                            <label for="middle-initial-input">Middle Initial</label>
                            <input class = "middle-name-input" type = "text" placeholder="M.I." maxlength="1" value="{{cases.RespondentInfo.MiddleInitial}}" readonly>
                        </div>
                        <div class = "input-pair">
                            <label for="first-name-input">First Name</label>
                            <input class = "first-name-input" type = "text" placeholder="First Name" value="{{cases.RespondentInfo.FirstName}}" readonly>
                        </div>
                    </div>

                    <span class = "section-name">Complainer Information</span>
                    <div class = "form-section" id = "complainer-info">
                        <div class = "input-pair">
                            <label for="last-name-input">Last Name</label>
                            <input class = "last-name-input" type ="text" placeholder="Last Name" value="{{cases.ComplainerInfo.LastName}}" readonly>
                        </div>
                        <div class = "input-pair">
                            <label for="middle-initial-input">Middle Initial</label>
                            <input class = "middle-name-input" type = "text" placeholder="M.I." maxlength="1" value="{{cases.ComplainerInfo.MiddleInitial}}" readonly>
                        </div>
                        <div class = "input-pair">
                            <label for="first-name-input">First Name</label>
                            <input class = "first-name-input" type = "text" placeholder="First Name" value="{{cases.ComplainerInfo.FirstName}}" readonly>
                        </div>
                    </div>
                    
                    <span class = "section-name">Mediation Information</span>
                    <div class = "form-section" id = "mediation-info">
                        <div class = "input-pair">
                            <label for="last-name-input">Last Name</label>
                            <input class = "last-name-input" type ="text" placeholder="Last Name" value="{{cases.MediationInfo.LastName}}" readonly>
                        </div>
                        <div class = "input-pair">
                            <label for="middle-initial-input">Middle Initial</label>
                            <input class = "middle-name-input" type = "text" placeholder="M.I." maxlength="1" value="{{cases.MediationInfo.MiddleInitial}}" readonly>
                        </div>
                        <div class = "input-pair">
                            <label for="first-name-input">First Name</label>
                            <input class = "first-name-input" type = "text" placeholder="First Name" value="{{cases.MediationInfo.FirstName}}" readonly>
                        </div>
                    </div>

                    <span class = "section-name">Consilation Information</span>
                    <div class = "form-section" id = "consilation-information">
                        <div class = "input-pair">
                            <label for="last-name-input">Last Name</label>
                            <input class = "last-name-input" type ="text" placeholder="Last Name" value="{{cases.ConciliationInfo.LastName}}" readonly>
                        </div>
                        <div class = "input-pair">
                            <label for="middle-initial-input">Middle Initial</label>
                            <input class = "middle-name-input" type = "text" placeholder="M.I." maxlength="1" value="{{cases.ConciliationInfo.MiddleInitial}}" readonly>
                        </div>
                        <div class = "input-pair">
                            <label for="first-name-input">First Name</label>
                            <input class = "first-name-input" type = "text" placeholder="First Name" value="{{cases.ConciliationInfo.FirstName}}" readonly>
                        </div>
                    </div>

                    <span class ="section-name">Case</span>
                    <div class = "form-section" id="location">
                        <div class = "input-pair">
                            <textarea class = "location-input" id="case-description" type = "text" placeholder="Case Details" readonly>{{cases.Case}}</textarea>
                        </div>
                    </div>
                </form>

            </div>  
        </div>
        
        <div class = "buttons-container">
            {{#checkArchived cases.isArchived}} 
                {{#checkStatus cases.Status}}
                    <button type="button" class="form-btn delete" onclick="openArchiveModalLupon('{{cases._id}}')">
                        <img src="/images/form-trash.png">
                        <span>Archive Record</span>
                    </button>
                {{else}}
                    <a href="/mark-resolved/{{cases._id}}"><button type="button" class="form-btn resolved"><img src="/images/form-check.png"><span>Mark as Resolved</span></button></a>
                    <a href="/A-lupon-edit-case/{{cases._id}}"><button type="button" class="form-btn edit"><img src="/images/form-edit.png"><span>Edit Data</span></button></a>
                    {{!-- if ongoing, di pwede i-archived --}}
                    {{!-- <a href="/delete-case-lupon/{{cases._id}}"><button type="button" class="form-btn delete"><img src="/images/form-trash.png"><span>Delete this record</span></button></a> --}}
                {{/checkStatus}}
            {{else}}
                    <button type="button" class="form-btn edit" onclick="openRestoreModalLupon('{{cases._id}}')">
                        <img src="/images/restore.png">
                        <span>Restore Record</span>
                    </button>
            {{/checkArchived}}
        </div>

        <!-- Modal Structure -->
        <div id="restoreModalLupon" class="modal">
            <div class="modal-content">
                <span class="close" onclick="closeRestoreModalLupon()">&times;</span>
                <h2>Restore Record</h2>
                <p>Are you sure you want to restore this record?</p>
                <button id="confirmRestoreBtnLupon" class="restore-btns">Yes</button>
                <button class="restore-btns" onclick="closeRestoreModalLupon()">No</button>
            </div>
        </div>

        <div id="archiveModalLupon" class="modal">
            <div class="modal-content">
                <span class="close" onclick="closeArchiveModalLupon()">&times;</span>
                <h2>Archive Record</h2>
                <p>Are you sure you want to archive this record?</p>
                <button id="confirmArchiveBtnLupon" class="restore-btns">Yes</button>
                <button class="restore-btns" onclick="closeArchiveModalLupon()">No</button>
            </div>
        </div>
    </div>
</div>