    <div class = "page-content-container"  id="create-case-page">
        <h1 id = "tanod-case-title">Creating a New Tanod Case Record</h1>
        <div class = "form-encasing-container">
            <div class = "form-actual-container">

                {{!-- FORM --}}
                <form action="/submit-tanod-case" method="post" id="case-form" class="case-form">
                <div class="message">{{message}}</div>
                    <div class = "form-section" id = "basic-info">
                        <div class = "column-section">
                            <label for="entry-number-input" class ="bold-label">Entry Number</label>
                            <input class = "entry-number-input" type = "text" placeholder= "Entry Number" name="EntryNo" required>
                        </div>
                        <div class = "column-section">
                            <label for="date" class ="bold-label">Date</label>
                            <input type = "date" id = "dateInput" name="Date" required>
                        </div>
                        <div class = "column-section1">
                            <label for="case-form" class ="bold-label">Status</label>
                            <select name="Status" class="status-dropdown" selected = "1" required>
                                <option value="" selected hidden>Select Status</option>
                                <option value="Resolved">Resolved</option>
                                <option value="Ongoing">Ongoing</option>
                            </select>
                        </div>
                    </div>
                    <span class = "section-name">Reportee Information</span>
                    <div class = "form-section" id = "reportee-info">
                        <div class = "input-pair">
                            <label for="last-name-input">Last Name</label>
                            <input class = "last-name-input" type ="text" placeholder="Last Name" name="reporteeLastName" required>
                        </div>
                        <div class = "input-pair">
                            <label for="middle-initial-input">Middle Initial</label>
                            <input class = "middle-name-input" type = "text" placeholder="M.I." maxlength="1" name="reporteeMiddleInitial" required> 
                        </div>
                        <div class = "input-pair">
                            <label for="first-name-input">First Name</label>
                            <input class = "first-name-input" type = "text" placeholder="First Name" name="reporteeFirstName" required>
                        </div>
                    </div>
                    <div class="form-section" id = "reportee-additional-info">
                        <div class = "input-pair">
                            <label for="">Reportee Address</label>
                            <input class = "address-input" type = "text" placeholder="Reportee Address" name="reporteeAddress" required> 
                        </div>
                    </div>
                    <span class="section-name">Nature of Blotter</span>
                    <div class = "form-section">
                        <div class = "input-pair">
                            <input class = "nature-of-blotter-input" type = "text" placeholder="Nature of Blotter" name="natureOfBlotter" required>
                        </div>
                    </div>
                    <span class = "section-name">Respondent Information</span>
                    <div class = "form-section" id = "respondent-info">
                        <div class = "input-pair">
                            <label for="last-name-input">Last Name</label>
                            <input class = "last-name-input" type ="text" placeholder="Last Name" name="respondentLastName" required>
                        </div>
                        <div class = "input-pair">
                            <label for="middle-initial-input">Middle Initial</label>
                            <input class = "middle-name-input" type = "text" placeholder="M.I." maxlength="1" name="respondentMiddleInitial" required>
                        </div>
                        <div class = "input-pair">
                            <label for="first-name-input">First Name</label>
                            <input class = "first-name-input" type = "text" placeholder="First Name" name="respondentFirstName" required>
                        </div>
                    </div>
                    <span class = "section-name">Desk Officer Information</span>

                    <div class = "form-section" id = "desk-officer-information">
                        <div class = "input-pair">
                            <label for="last-name-input">Last Name</label>
                            <input class = "last-name-input" type ="text" placeholder="Last Name" name="deskOfficerLastName" required>
                        </div>
                        <div class = "input-pair">
                            <label for="middle-initial-input">Middle Initial</label>
                            <input class = "middle-name-input" type = "text" placeholder="M.I." maxlength="1" name="deskOfficerMiddleInitial" required>
                        </div>
                        <div class = "input-pair">
                            <label for="first-name-input">First Name</label>
                            <input class = "first-name-input" type = "text" placeholder="First Name" name="deskOfficerFirstName" required>
                        </div>
                    </div>
                    <span class = "section-name">Witness Information</span>
                    <div class = "form-section" id = "witness-information">
                        <div class = "input-pair">
                            <label for="last-name-input">Last Name</label>
                            <input class = "last-name-input" type ="text" placeholder="Last Name" name="witnessLastName" required>
                        </div>
                        <div class = "input-pair">
                            <label for="middle-initial-input">Middle Initial</label>
                            <input class = "middle-name-input" type = "text" placeholder="M.I." maxlength="1" name="witnessMiddleInitial" required>
                        </div>
                        <div class = "input-pair">
                            <label for="first-name-input">First Name</label>
                            <input class = "first-name-input" type = "text" placeholder="First Name" name="witnessFirstName" required>
                        </div>
                    </div>
                    <span class ="section-name">Location</h5>
                    <div class = "form-section" id="location">
                        <div class = "input-pair">
                            <input class = "location-input" type = "text" placeholder="Location" name="location" required>
                        </div>
                    </div>
                </form>
            </div>  
        </div>
        
         <div class = "buttons-container">
            <button type="button" class="form-btn save"     id="create-submit-btn"> <img src="/images/form-check.png"><span>Save Changes</span></button>
            <button type="button" class="form-btn discard"  id="discardButton">     <img src="/images/form-trash.png"><span>Discard Changes</span></button>
        </div>

        <div id="validationModal" class="modal">
            <div class="modal-content">
                <span class="close">&times;</span>
                <p id="modalMessage"></p>
            </div>
        </div>
    </div>
