<link rel = "stylesheet" type = "text/css" href = "/css/back-button.css">
<script src="/js/header.js" type="text/javascript"></script>

<div class = "main-container">
    <div class= "header" id="header">
        <div class = "header-left">
            <a href="/admin-homepage" class="header-logo-link" id="home-link1"><img src="/images/logo.png" class="header-logo"></a>
            <a href="/admin-homepage" class="header-home" id="home-link2"><h3>Home</h3></a>
        </div>
        
        <div class = "header-title">
            <div class = "header-text">
                <h3>Sangguniang Barangay ng Parang</h3>
                <h5>Marikina City</h5>
            </div>
        </div>
        <div class="header-right">
            <div class="header-user-profile">
                <span class="header-user-profile-text" id="profile-text">Admin</span>
                <img src="/images/admin-profile.png" class="header-user-profile" id="profile-img">
            </div>
            <button type="button" class="header-logout-btn" id="logout-btn">Logout</button>
        </div>
    </div>

    

    <div class = "page-content-container"  id="edit-case-page">
        <div class="back-and-title">
            <div class="upper-container" id="form-upper-container">
                <!-- Back button should be changed to admin lupon view page (database) -->
                <a href="/admin-tanod-db-view" class="back-button" id="white-back-button">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" fill="white" class="size-4">
                        <path fill-rule="evenodd" d="M1 8a7 7 0 1 0 14 0A7 7 0 0 0 1 8Zm10.25.75a.75.75 0 0 0 0-1.5H6.56l1.22-1.22a.75.75 0 0 0-1.06-1.06l-2.5 2.5a.75.75 0 0 0 0 1.06l2.5 2.5a.75.75 0 1 0 1.06-1.06L6.56 8.75h4.69Z" clip-rule="evenodd"></path>
                    </svg>
                    Back
                </a>
            </div>
            <h1 id = "tanod-case-title">Editing Tanod Case Details</h1>
        </div>
        <div class = "form-encasing-container">
            <div class = "form-actual-container">
                
                <form action="/submit-edit-tanod-case" method="post" class="case-form">
                    <!-- Hidden input for _id -->
                    <input type="hidden" name="_id" value="{{cases._id}}">      
                    
                    <div class = "form-section" id = "basic-info">
                        <div class = "column-section">
                            <label for="entry-number-input" class ="bold-label">Entry Number</label>
                            <input class = "entry-number-input" type = "text" value="{{cases.EntryNo}}" name="{{cases.EntryNo}}" readonly>
                        </div>
                        <div class = "column-section">
                            <label for="date" class ="bold-label">Date</label>
                            <input type = "date" id = "dateInput" value="{{cases.Date}}" name="Date" >
                        </div>
                        <div class = "column-section1">
                            <label for="case-form" class ="bold-label">Status</label>
                            
                            <select id="statusDropdown" name="Status" class="status-dropdown-view-edit">
                                <option value="" disabled hidden>Select Status</option>
                                <option value="Resolved" {{#checkStatus cases.Status}} selected {{/checkStatus}}>Resolved</option>
                                <option value="Ongoing" {{#unless_checkStatus cases.Status}} selected {{/unless_checkStatus}}>Ongoing</option>
                            </select>
                        </div>
                    </div>
                    <span class = "section-name">Reportee Information</span>
                    <div class = "form-section" id = "reportee-info">
                        <div class = "input-pair">
                            <label for="last-name-input">Last Name</label>
                            <input class = "last-name-input" type ="text" value="{{cases.ReporteeInfo.LastName}}" name="reporteeLastName">
                        </div>
                        <div class = "input-pair">
                            <label for="middle-initial-input">Middle Initial</label>
                            <input class = "middle-name-input" type = "text" value="{{cases.ReporteeInfo.MiddleInitial}}" maxlength="1" name="reporteeMiddleInitial">
                        </div>
                        <div class = "input-pair">
                            <label for="first-name-input">First Name</label>
                            <input class = "first-name-input" type = "text" value="{{cases.ReporteeInfo.FirstName}}" name="reporteeFirstName">
                        </div>
                    </div>
                    <div class="form-section" id = "reportee-additional-info">
                        <div class = "input-pair">
                            <label for="">Reportee Address</label>
                            <input class = "address-input" type = "text" value="{{cases.ReporteeInfo.Address}}" name="reporteeAddress"> 
                        </div>
                    </div>
                    <span class="section-name">Nature of Blotter</span>
                    <div class = "form-section">
                        <div class = "input-pair">
                            <input class = "nature-of-blotter-input" type = "text" value="{{cases.natureOfBlotter}}" name="natureOfBlotter">
                        </div>
                    </div>
                    <span class = "section-name">Respondent Information</span>
                    <div class = "form-section" id = "respondent-info">
                        <div class = "input-pair">
                            <label for="last-name-input">Last Name</label>
                            <input class = "last-name-input" type ="text" value="{{cases.RespondentInfo.LastName}}" name="respondentLastName">
                        </div>
                        <div class = "input-pair">
                            <label for="middle-initial-input">Middle Initial</label>
                            <input class = "middle-name-input" type = "text" value="{{cases.RespondentInfo.MiddleInitial}}" maxlength="1" name="respondentMiddleInitial">
                        </div>
                        <div class = "input-pair">
                            <label for="first-name-input">First Name</label>
                            <input class = "first-name-input" type = "text" value="{{cases.RespondentInfo.FirstName}}" name="respondentFirstName">
                        </div>
                    </div>
                    <span class = "section-name">Desk Officer Information</span>

                    <div class = "form-section" id = "desk-officer-information">
                        <div class = "input-pair">
                            <label for="last-name-input">Last Name</label>
                            <input class = "last-name-input" type ="text" value="{{cases.DeskOfficerInfo.LastName}}"  name="deskOfficerLastName">
                        </div>
                        <div class = "input-pair">
                            <label for="middle-initial-input">Middle Initial</label>
                            <input class = "middle-name-input" type = "text" value="{{cases.DeskOfficerInfo.MiddleInitial}}" maxlength="1"  name="deskOfficerMiddleInitial">
                        </div>
                        <div class = "input-pair">
                            <label for="first-name-input">First Name</label>
                            <input class = "first-name-input" type = "text" value="{{cases.DeskOfficerInfo.FirstName}}"  name="deskOfficerFirstName">
                        </div>
                    </div>
                    <span class = "section-name">Witness Information</span>
                    <div class = "form-section" id = "witness-information">
                        <div class = "input-pair">
                            <label for="last-name-input">Last Name</label>
                            <input class = "last-name-input" type ="text" value="{{cases.WitnessInfo.LastName}}"  name="witnessLastName">
                        </div>
                        <div class = "input-pair">
                            <label for="middle-initial-input">Middle Initial</label>
                            <input class = "middle-name-input" type = "text" value="{{cases.WitnessInfo.MiddleInitial}}" maxlength="1"  name="witnessMiddleInitial">
                        </div>
                        <div class = "input-pair">
                            <label for="first-name-input">First Name</label>
                            <input class = "first-name-input" type = "text" value="{{cases.WitnessInfo.FirstName}}"  name="witnessFirstName">
                        </div>
                    </div>
                    <span class ="section-name">Location</h5>
                    <div class = "form-section" id="location">
                        <div class = "input-pair">
                            <input class = "location-input" type = "text" value="{{cases.Location}}"  name="location">
                        </div>
                    </div>
                </form>

            </div>  
        </div>
        
        <div class = "buttons-container">
            <button type="button" id="saveButton"       class="form-btn save">      <img src="/images/form-check.png"><span>Save Changes</span></button>
            <button type="button" id="discardButton"    class="form-btn discard">   <img src="/images/form-trash.png"><span>Discard Changes</span></button>
        </div>
    </div>
</div>