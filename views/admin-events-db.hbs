<div class="content-container-tanod-home">
    <div class="box-content-top-1000px">
        <a href="#"> 
            <button type="button" class="form-btn create size">                                  <img src="/images/form-create.png"> <span>Create New Event</span>  </button>
        </a>
        <button type="button" class="form-btn inactive margin size" id="inactiveButtonAdmin">    <img src="/images/form-inactive.png">  <span>Mark as Inactive</span>   </button>
        <div class="search-name-reg margin">

            <!-- implement search function -->
            <form id="searchFormEvents">
                <button type="submit"><img src="/images/search-reg.png"></button>
                <input type="text" placeholder="Search Event" name="search_event">
            </form>
        </div>
    </div>

    <table class="events-db-table">
                <thead>
                    <tr>
                        <th></th>
                        <th>Headline</th>
                        <th>Event Information</th>
                        <th>Event Status</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody> 
                        <tr>
                            <td data-label="checkbox" class="align-right check-view-cell">
                                <button type="button" class="checkbox" name="eventIds" value="{{this._id}}"><img src="/images/Done.png"></button>
                            </td>
                            <td class="truncate-text-150px">
                                Input Headline Here
                            </td>
                            <td class="truncate-text-300px">
                                Lorem ipsum dolor sit amet consectetur adipisicing elit. Corrupti atque, aliquid quod cum a illo.
                            </td>
                            <td class="event-status">
                                <button type="button" class="status active" style="pointer-events: none;" disabled><img src="/images/resolved-circle.png"><span>Active</span></button>
                            </td>
                            <!-- ELSE
                            <td class="fit-button">
                                <button type="button" class="status inactive" onclick="updateStatus('{{this._id}}', '{{this.Status}}')">
                                    <img src="/images/inactive-circle.png"><span>Inactive</span>
                                </button>
                            </td>
                            -->
                            <td>
                                <a href="#" class="view-events-link">View Event Details</a>
                            </td>
                        </tr>
                </tbody>
            </table>

    <div class="box-content-page">
        <button class="page-btn" id="count-down">&lt;</button>
        <div class="page-count" id="page-num">{{currentPage}}</div>
        <button class="page-btn" id="count-up">&gt;</button>
        {{#if (eq 0 totalPages)}}
            <div class="page-number">Page {{currentPage}} of 1</div>
        {{else}}
            <div class="page-number">Page {{currentPage}} of {{totalPages}}</div>
        {{/if}}
    </div>
