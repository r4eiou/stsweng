<html>
  <head>
    <title>
      Barangay Parang - Initial Login Page
    </title>
    <link rel="stylesheet" type="text/css" href="/css/index.css" />
    <link rel="stylesheet" type="text/css" href="/css/login-page.css" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  </head>
  <body>
    <!-- TO BE USED AS LOGIN PAGE replace with login.hbs after routes fixed -->
    <div class="main-container">
      <div class="ls-panel">
        <div class="ls-panel-left">
          <img src="/images/logo-revised.svg" class="ls-panel-logo" />
          <h1>Barangay Parang</h1>
        </div>
        <div class="ls-panel-main">
          <span class="ls-panel-title" id="login-title">Login</span>
          <!--
          <div class="ls-error-notice">
            <ul>
            <li> sample error here </li>
            <li>{{error}}</li>
          </ul></div>
          -->
          <!--login main form-->
          
          <form class="login-form" action="check-login" method="post">
            <div class="ls-field">
              <label for="email">Email</label>
              <input type="text" id="email" name="email" placeholder="Email" />
            </div>
            <div class="ls-field-pw">
              <label for="password">Password</label>
              <div class="input-container">
                <input type="password" placeholder="Password" id="login-pw"/>
                <button
                  type="button"
                  class="view-pw-btn"
                  title="View Password"
                  onclick="hidePW('login')"
                  id="eye-login-pw"
                  class="eye-login"
                >
                  <img src="/images/action-view.png" />
                </button>
              </div>
            </div>
            <div class="login-submit">
              <input type="submit" value="Login" id="login-submit-btn" />
            </div>
            <!--login main form-->
          </form>

          <p>
            Don't have an account yet?
            <a class="signup-link" href="/employee-login">Signup</a>
          </p>
          <div class="login-return">
            <!-- TODO: revise onclick function (should return to last page visited)-->
            <a href="/"><button type="button" value="return" onclick="employeeView()" id="return-btn">Return</button></a>
          </div>
        </div>
      </div>
    </div>
    </div>
     
