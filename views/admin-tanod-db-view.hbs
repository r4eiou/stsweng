</div>
    <script>
        $(document).ready(function() {
            const currentPage = {{currentPage}};
            const totalPages = {{totalPages}};
            const baseUrl = '/admin-tanod-db-view?page=';

            $('#count-down').click(function() {
                if (currentPage > 1) {
                    window.location.href = baseUrl + (currentPage - 1);
                }
            });

            $('#count-up').click(function() {
                if (currentPage < totalPages) {
                    window.location.href = baseUrl + (currentPage + 1);
                }
            });
            /*
            window.updateStatus = function(caseId, currentStatus) {
                window.location.href = `/update-Status/${caseId}/${currentStatus}/${currentPage}`;
            }; */
        });
    </script>


<script>
        function dropdown() {
            var dropdownContent = document.getElementById("dropdown-btn");
            var dropdownImg = document.getElementById("dropdown-down-btn");

            if (dropdownContent.style.display === "block") {
                dropdownContent.style.display = "none";
                dropdownImg.src = "/images/dropdown-down.png";
            } else {
                dropdownContent.style.display = "block";
                dropdownImg.src = "/images/dropdown-up.png";
            }
        }
                
        function selectOption(optionText) {
            var dropdownButton = document.getElementById("dropdownButton");
            dropdownButton.innerHTML = optionText + ' <img src="/images/dropdown-down.png" id="dropdown-down-btn"/>';
            document.getElementById("dropdown-btn").style.display = "none";

            switch (optionText) {
                case 'View All Cases':
                    showAllRows();
                    enableButtons();
                    break;
                case 'View Ongoing':
                    filterRowsByStatus('Ongoing');
                    enableButtons();
                    break;
                case 'View Resolved':
                    filterRowsByStatus('Resolved');
                    enableButtons();
                    break;
                case 'View Archived':
                    filterArchivedRows();
                    disableButtons();
                    break;
            }
        }

        function showAllRows() {
            var rows = document.querySelectorAll("#tanod-db-table-body tr");
            rows.forEach(function (row) {
                row.style.display = "table-row";  
            });
        }

        function filterRowsByStatus(status) {
            const tables = document.querySelectorAll("#tanod-db-table-body");

            tables.forEach(function (table) {
                const rows = table.querySelectorAll("tr"); 
                rows.forEach(function (row) {
                    const isArchived = row.getAttribute("data-archived") === "true"; 
                    const statusText = row.getAttribute("data-status")?.trim(); 

                    if (!isArchived) {
                        row.style.display = (statusText === status) ? "table-row" : "none";
                    } else {
                        row.style.display = "none";
                    }
                });
            });
        }


        function filterArchivedRows() {
            var rows = document.querySelectorAll("#tanod-db-table-body tr");
            rows.forEach(function (row) {
                var isArchived = row.getAttribute("data-archived") === "true";
                var viewCaseLink = row.querySelector(".view-case-detail-link");
                var caseId = row.getAttribute("data-id");

                if (isArchived) {
                    row.style.display = "table-row";
                    viewCaseLink.href = `/A-tanod-case-details-archive`;
                } else {
                    row.style.display = "none";
                }
            });
        }

        function disableButtons() {
            var createButton = document.getElementById('createButtonTanod');
            var createLink = createButton.parentElement;
            var resolveButton = document.getElementById('resolvedButtonTanod');

            createButton.classList.add('disabled');
            createLink.classList.add('disabled');
            createLink.setAttribute('href', '#');
            resolveButton.classList.add('disabled');

            createButton.onclick = function (event) { event.preventDefault(); };
            resolveButton.onclick = function (event) { event.preventDefault(); };
        }

        function enableButtons() {
            var createButton = document.getElementById('createButtonTanod');
            var createLink = createButton.parentElement;
            var resolveButton = document.getElementById('resolvedButtonTanod');

            createButton.classList.remove('disabled');
            createLink.classList.remove('disabled');
            createLink.setAttribute('href', '/A-tanod-create-case');
            resolveButton.classList.remove('disabled');

            createButton.onclick = null;
            resolveButton.onclick = null;
        }

        window.onclick = function(event) {
            if (!event.target.matches('.dropbtn')) {
                var dropdowns = document.getElementsByClassName("dropdown-content");
                for (var i = 0; i < dropdowns.length; i++) {
                    var openDropdown = dropdowns[i];
                    if (openDropdown.style.display === "block") {
                        openDropdown.style.display = "none";
                    }
                }
            
                var dropdownImg = document.getElementById("dropdown-down-btn");
                dropdownImg.src = "/images/dropdown-down.png";
            }
        };
</script>


