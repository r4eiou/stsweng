                            <td class="truncate-text-150px">
                                {{fullName ReporteeInfo.FirstName ReporteeInfo.MiddleInitial ReporteeInfo.LastName}}
                            </td>
                            {{#checkStatus Status}}
                            <td class="case-status-cell-admin">
                                <button type="button" class="status resolved" style="pointer-events: none;" disabled><img src="/images/resolved-circle.png"><span>Resolved</span></button>
                            </td>
                            {{else}}
                            <td class="case-status-cell-admin">
                                <button type="button" class="status ongoing" onclick="updateStatus('{{this._id}}', '{{this.Status}}')">
                                    <img src="/images/ongoing-circle.png"><span>Ongoing</span>
                                </button>
                            </td>
                            {{/checkStatus}}
                            <td>
                                <a href="/A-tanod-view-case/{{this._id}}" class="content-text-main underline view-case-detail-link">View Tanod Case</a>
                            </td>
                            <td class="case-status-cell align-left">
                                <a href="/A-tanod-edit-case/{{this._id}}" {{this.isEditable}}>
                                <button type="button" class="form-action-btn" title="Edit Case Details" {{isEditable}}><img src="/images/action-edit.png"></button></a>
                            </td>
                        </tr>
