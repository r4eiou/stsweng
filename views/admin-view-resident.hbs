            </div>
            <a href="/logout"><button type="button" class="header-logout-btn" id="logout-btn" onclick="logout()">Logout</button></a>
        </div>
    </div>

     <div class = "page-content-container" id="view-case-page">
        <div class="back-and-title">
            <div class="upper-container" id="form-upper-container">
                <a href="/admin-resident-db-view" class="back-button" id="black-back-button">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" fill="black" class="size-4">
                        <path fill-rule="evenodd" d="M1 8a7 7 0 1 0 14 0A7 7 0 0 0 1 8Zm10.25.75a.75.75 0 0 0 0-1.5H6.56l1.22-1.22a.75.75 0 0 0-1.06-1.06l-2.5 2.5a.75.75 0 0 0 0 1.06l2.5 2.5a.75.75 0 1 0 1.06-1.06L6.56 8.75h4.69Z" clip-rule="evenodd"></path>
                    </svg>
                    Back
                </a>
            </div>
            <h1 id = "lupon-case-title">Viewing Resident Details</h1>
        </div>
        <div class = "form-encasing-container">
            <div class = "form-actual-container">
                <form id="case-form" class="case-form">
                    
                    <div class = "form-section middle" id = "respondent-servicerequestno-row">
                        <div class = "column-section">
                            <div class="photo-container">
                                <img src="/images/customer.png" class="details-profile" id="deets-profile-img">
                            </div>
                        </div>
                        <div class = "column-section">
                            <label for="respondent-service-request-no" class ="bold-label">Service Request ID #</label>
                            <input class="case-type-input" type = "text" id = "case-type" placeholder="123456789" value="" readonly>
                        </div>
                    </div>

                    <div class = "form-section" id = "respondent-fullname-row">
                        <div class = "input-pair">
                            <label for="first-name-input">First Name</label>
                            <input class = "first-name-input" type = "text" placeholder="First Name" value="" readonly>
                        </div>
                        <div class = "input-pair">
                            <label for="middle-initial-input">Middle Initial</label>
                            <input class = "middle-name-input" type = "text" placeholder="M.I." value="" readonly>
                        </div>
                        <div class = "input-pair">
                            <label for="last-name-input">Last Name</label>
                            <input class = "last-name-input" type ="text" placeholder="Last Name" value="" readonly>
                        </div>
                    </div>

                    <div class = "form-section" id = "respondent-fullname-row">
                        <div class = "input-pair">
                            <label for="resident-birthday">Birthday</label>
                            <input class = "resident-birthday-input" type = "test" placeholder="mm/dd/yy" value="" readonly>
                        </div>
                        <div class = "input-pair second">
                            <label for="resident-sex">Sex</label>
                            <input class = "resident-sex-input" type = "text" placeholder="M.I." value="" readonly>
                        </div>
                        <div class = "input-pair third">
                            <label for="resident-email">Email</label>
                            <input class = "resident-email-input" type ="text" placeholder="Last Name" value="" readonly>
                        </div>
                    </div>

                    
                    <div class = "form-section" id = "respondent-senior-contactno-civilstatus-row">
                        <div class = "column-section">
                            <label for="register-senior">Senior(Y/N)</label>
                            <input class = "register-senior-input" id="case-title" type = "text" placeholder= "Case Title" value="" readonly>
                        </div>
                        <div class = "column-section">
                            <label for="register-contactno">Contact No.</label>
                            <input class="register-contactno-input" type = "text" id = "case-type" placeholder="Case Type" value="" readonly>
                        </div>
                        <div class="column-section1">
                            <label for="case-form">Civil Status</label>
                            <select name="case-form" class="status-dropdown-view">
                                <option value="" disabled hidden>Select Status</option>
                                <option value="2">Separated</option>
                                <option value="2">Widowed</option>
                                <option value="1" selected>Married</option>
                                <option value="0">Single</option>
                            </select>
                        </div>
                    </div>
                    
                    <span class = "section-name">Housing Information</span>
                    <div class = "form-section housing-row" id = "respondent-address-row">
                        <div class = "input-pair-row first">
                            <label for="resident-rent-own">Rent / Own</label>
                            <select name="resident-rent-own" class="resident-rent-own-dropdown-view">
                                <option value="" disabled hidden>Select</option>
                                <option value="1">Rent</option>
                                <option value="0">Own</option>
                            </select>
                        </div>
                    
                        <div class = "input-pair-row second">
                            <label for="resident-number-of-residents-in-household">Number of Resident/s in Household</label>
                            <input class = "resident-number-of-residents-in-household-input" type = "text" placeholder="3" value="" readonly>
                        </div>
                    </div>

                </form>

            </div>  
        </div>
        
        <div class = "buttons-container">
            <button type="button" id="archiveButton" class="form-btn archive"><img src="/images/form-trash.png"><span>Archive this record</span></button>

            <div class="overlay" id="overlay"></div>
                <div class="popup1" id="popup1">
                    <div class="upper-container-popup">
                        <div class="main-header">
                            <div class="question-label">Are you sure you want to <br> archive this record?</div>
                            <img src="/images/close.png" class="closebtn"/>
                        </div>
                        <div class="prompt-label font-light">
                            Archived records will be <span class="font-red font-light">deleted permanently</span> after 30 days. You may <span class="font-green font-light">recover</span> through the <span class="font-green">Archives Database</span></div>.
                        </div>
                        <div class="bottom-container">
                            <button class="archive-btn margin button">Archive</button>
                            <button class="cancel-btn-popup margin button">Cancel</button>
                        </div>
                    </div>
                </div>
                <div class="popup2" id="popup2">
                    <div class="upper-container-popup">
                        <div class="main-header">
                            <div class="header-label">Record successfully archived</div>
                            <img src="/images/close.png" class="closebtn"/>
                        </div>
                        <div class="prompt-label font-light small">Redirecting you to the Archives Database...</div>
                    </div>
                </div>
        </div>
    </div>
</div>    


<script>
document.addEventListener("DOMContentLoaded", function() {
    const popup1 = document.getElementById('popup1');
    const popup2 = document.getElementById('popup2');
    const overlay = document.getElementById('overlay');
    const archiveButton = document.getElementById('archiveButton');
    const archiveBtnPopup = document.querySelector('.archive-btn');
    const cancelBtnPopup = document.querySelector('.cancel-btn-popup');
    const closeBtns = document.querySelectorAll('.closebtn');

    function showPopup(popup) {
        overlay.style.display = 'block'; 
        popup.style.display = 'block';   
    }

    function hidePopup(popup) {
        overlay.style.display = 'none';  
        popup.style.display = 'none';    
    }

    archiveButton.addEventListener('click', function() {
        showPopup(popup1);
    });

    archiveBtnPopup.addEventListener('click', function() {
        hidePopup(popup1); 
        showPopup(popup2); 

        setTimeout(function() {
            window.location.href = "/admin-resident-db-view";
        }, 500); 
    });

    cancelBtnPopup.addEventListener('click', function() {
        hidePopup(popup1);
    });

    closeBtns.forEach(btn => {
        btn.addEventListener('click', function() {
            hidePopup(this.closest('.popup1, .popup2'));
        });
    });
});

function hideCaseStatusColumn() {
    var statusCells = document.querySelectorAll('.case-status-cell');
    statusCells.forEach(function(cell) {
        cell.style.display = 'none'; 
    });


}
function showCaseStatusColumn() {
    var statusCells = document.querySelectorAll('.case-status-cell');
    statusCells.forEach(function(cell) {
        cell.style.display = ''; 
    });
}


</script>
