        height: 500px;
        margin-bottom: 20px;
    }
    
    .form-section{
        justify-content: space-between;
    }
    .first-name-input,          .middle-name-input,         .last-name-input, 
    .resident-birthday-input,   .resident-sex-input,        .resident-email-input,
    .register-senior-input,     .register-contactno-input,  .status-dropdown-view,
    .resident-rent-own-dropdown-view,   .resident-number-of-residents-in-household-input{
