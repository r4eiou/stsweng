<html>
  <head>
    <title>
      Barangay Parang - Initial Login Page
    </title>

    <link rel="stylesheet" type="text/css" href="/css/login-page.css" />
    <link rel="stylesheet" type="text/css" href="/css/index.css" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  </head>
  <body>
    <!-- TO BE USED AS SIGNUP PAGE replace with signup.hbs after routes fixed -->
    <div class="main-container">
      <div class="ls-panel">
        <div class="ls-panel-left">
          <img src="/images/logo-revised.svg" class="ls-panel-logo" />
          <h1>Barangay Parang</h1>
        </div>
        <div class="ls-panel-main">
          <span class="ls-panel-title" id="signup-title">Signup</span>
          <!--
          <div class="ls-error-notice">
            <ul>
              <li> sample error here </li>
              <li>{{error}}</li>
            </ul></div>
            -->
          <!--signup main form-->
          <!-- TODO: check-signup route -->
          <form class="signup-form" action="check-signup" method="post">
            <div class="ls-field">
              <label for="firstname">First Name</label>
              <input type="text" id="first_name" name="firstname" placeholder="First Name" />
            </div>
            <div class="ls-field">
              <label for="lastname">Last Name</label>
              <input type="text" id="last_name" name="lastname" placeholder="Last Name" />
            </div>
            <div class="ls-field">
              <label for="email">Email</label>
              <div class="input-container">
                <input type="text" id="email" name="email" placeholder="Email" />
              </div>
            </div>
            <div class="ls-field-pw">
              <label for="password">Password</label>
              <div class="input-container">
                <input type="password" placeholder="Password" id="signup-pw" />
                <button
                  type="button"
                  class="view-pw-btn"
                  title="View Password"
                  onclick="hidePW('signup')"
                  id="eye-signup-pw"
                  class="eye-signup"
                >
                  <img src="/images/action-view.png" />
                </button>
              </div>
            </div>
            <div class="signup-submit">
              <input type="submit" value="Signup" id="signup-submit-btn" />
            </div>
            <!--signup main form-->
          </form>

          <p>
            Already have an account?
            <a class="login-link" href="/admin-login-page">Login</a>
          </p>
          <div class="return-btn">
            <!-- TODO: revise onclick function (should return to last page visited)-->
            <a href="/"><button type="button" value="return" onclick="employeeView()" id="return-btn">Return</button></a>
          </div>
        </div>
      </div>
    </div>

    <!-- for not registered 
    <div id="notRegisteredModal" class="modal" style="display: block;">
      <div class="modal-content">
        <span class="close">&times;</span>
        <h2>You are not yet registered.</h2>
        <p>Please contact the barangay for registration inquiries.</p>
      </div>
      -->
  </body>
</html>