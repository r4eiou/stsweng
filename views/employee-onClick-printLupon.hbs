        </svg>
        Back
    </a>
</div>

<div class="search-page">
    
    <div class="user-indicator">
        <div class="user-name-column">
            <div id="user-header-name" class="user-header">
                <h5> Name </h5>
            </div>
            <div id="user-data-name" class="user-data">
                <p> {{cases.RespondentInfo.FirstName}} {{cases.RespondentInfo.MiddleInitial}}. {{cases.RespondentInfo.LastName}}</p>
            </div>
        </div>

        <div id="tanod-column" class="user-tanod-column">
            <div class="user-header">
                <h5> Tanod Case Status </h5>
            </div> 
        </div>

        <div class="user-lupon-column">
            <div class="user-header">
                <h5> Lupon Case Status </h5>
            </div>
             <div class="user-data">
                {{#checkStatus cases.Status}}
                    <select name="case-form" class="status resolved" disabled>
                        <option value="" disabled hidden>Select Status</option>
                        <option value="1" selected>Resolved</option>
                        <option value="0">Ongoing</option>
                    </select>
                {{else}}
                    <select name="case-form" class="status ongoing" disabled>
                        <option value="" disabled hidden>Select Status</option>
                        <option value="1">Resolved</option>
                        <option value="0" selected>Ongoing</option>
                    </select>
                {{/checkStatus}}
            </div>
        </div>

        {{!-- <div class="user-action-column">
            <div class="user-header">
                <h5> Action </h5>
            </div>
            <div class="user-data">
                <!--   <button type="button" class="print-btn reg light"><img src="../public/images/print-light.png"><span>Print</span></button> -->
                    <button type="button" class="print-btn reg dark"><img src="/images/print-dark.png"><span>Print</span></button> 
            </div>
        </div> --}}

    </div>

    <div class="user-print">
            <div class="header-alert">
                <div class="name-display">
                    <h2> {{cases.RespondentInfo.FirstName}} {{cases.RespondentInfo.MiddleInitial}}. {{cases.RespondentInfo.LastName}} </h2>
                </div>
                <div class="clearance-alert">
                    {{#checkStatus cases.Status}}
                        <p id="cleared"> Cleared for Certification Printing </p>
                    {{else}}
                        <p id="ongoing"> An ongoing case is found, would you like to continue downloading the certificate? </p>
                    {{/checkStatus}}
                </div>
            </div>

            <div class="alert-mssg">
                <div class="clearance-alert">
                    {{#checkStatus cases.Status}}
                        <h3 id="alert-cleared"> No ongoing case is found, would you like to continue printing the certificate? </h3>
                    {{else}}
                        <h3 id="alert-ongoing"> An ongoing case is found, would you like to continue downloading the certificate? </h3>
                    {{/checkStatus}}
                </div>
            </div>

            <div class="print-buttons">
                {{#checkStatus cases.Status}}
                    <a href="/employee-input-page"><button type="button" class="print-btn lrg dark"><img src="/images/print-dark.png"><span>Print</span></button></a>
                    <a href="/employee-check-clearance"><button type="button" class="cancel-btn light"><img src="/images/cancel-light.png"><span>Cancel</span></button></a>
                {{else}}
                    <a href="/employee-input-page"><button type="button" class="print-btn lrg light"><img src="/images/print-light.png"><span>Print</span></button></a>
                    <a href="/employee-check-clearance"><button type="button" class="cancel-btn dark"><img src="/images/cancel-dark.png"><span>Cancel</span></button></a>
                {{/checkStatus}}
            </div>


    </div>

</div>
    