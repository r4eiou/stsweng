<link rel = "stylesheet" type = "text/css" href = "/css/homepage.css">
<link rel = "stylesheet" type = "text/css" href = "/css/form.css">
<link rel = "stylesheet" type = "text/css" href = "/css/back-button.css">
<div class = "main-container">
    <div class= "header" id="header">
        <div class = "header-left">
            <a href="/tanod-home" class="header-logo-link" id="home-link1"><img src="/images/logo.png" class="header-logo"></a>
            <a href="/tanod-home" class="header-home" id="home-link2"><h3>Home</h3></a>
        </div>
        
        <div class = "header-title">
            <div class = "header-text">
                <h3>Sangguniang Barangay ng Parang</h3>
                <h5>Marikina City</h5>
            </div>
        </div>
        <div class="header-right">
            <div class="header-user-profile">
                <span class="header-user-profile-text tanod" id="profile-text">Employee</span>
                <img src="/images/employee-profile.png" class="header-user-profile" id="profile-img">
            </div>
            <a href="/logout"><button type="button" class="header-logout-btn" id="logout-btn">Logout</button></a>
        </div>
    </div>
    <div class = "page-content-container" id="view-case-page">
        <div class="back-and-title">
            <div class="upper-container" id="form-upper-container">
                <a href="/admin-lupon-db-view" class="back-button" id="black-back-button">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" fill="black" class="size-4">
                        <path fill-rule="evenodd" d="M1 8a7 7 0 1 0 14 0A7 7 0 0 0 1 8Zm10.25.75a.75.75 0 0 0 0-1.5H6.56l1.22-1.22a.75.75 0 0 0-1.06-1.06l-2.5 2.5a.75.75 0 0 0 0 1.06l2.5 2.5a.75.75 0 1 0 1.06-1.06L6.56 8.75h4.69Z" clip-rule="evenodd"></path>
                    </svg>
                    Back
                </a>
            </div>
            <div class="text-container-archive-box">
                <div class = "text-container-archive">
                    <h1 id = "event-details-title-archive">Archive </h1>
                    <h1 id = "event-details-title">Lupon Case Details</h1>
                </div>
            </div>

            
        </div>
        <div class = "form-encasing-container">
            <div class = "form-actual-container">
                <form class="case-form">
                    <div class = "form-section" id = "basic-info">
                        <div class = "column-section">
                            <label for="entry-number-input" class ="bold-label">Entry Number</label>
                            <input class = "entry-number-input" type = "text" placeholder= "Entry Number" value="{{case.EntryNo}}" readonly>
                        </div>
                        <div class = "column-section">
                            <label for="date" class ="bold-label">Date</label>
                            <input type = "date" id = "dateInput" value="{{case.Date}}" readonly>
                        </div>
                        <div class = "column-section1">
                            <label for="case-form" class ="bold-label">Status</label>
                            <select name="case-form" class="status-dropdown-view" selected = "1">
                                <option value="" disabled hidden>Select Status</option>
                                <option value="Resolved" {{resolveStat}}>Resolved</option>
                                <option value="Ongoing" {{ongoingStat}}>Ongoing</option>
                            </select>
                        </div>
                    </div>
                    <span class = "section-name">Reportee Information</span>
                    <div class = "form-section" id = "reportee-info">
                        <div class = "input-pair">
                            <label for="last-name-input">Last Name</label>
                            <input class = "last-name-input" type ="text" placeholder="Last Name" value="{{reporteeInfo.LastName}}" readonly>
                        </div>
                        <div class = "input-pair">
                            <label for="middle-initial-input">Middle Initial</label>
                            <input class = "middle-name-input" type = "text" placeholder="M.I." maxlength="1" value="{{reporteeInfo.MiddleInitial}}" readonly>
                        </div>
                        <div class = "input-pair">
                            <label for="first-name-input">First Name</label>
                            <input class = "first-name-input" type = "text" placeholder="First Name" value="{{reporteeInfo.FirstName}}" readonly>
                        </div>
                    </div>
                    <div class="form-section" id = "reportee-additional-info">
                        <div class = "input-pair">
                            <label for="">Reportee Address</label>
                            <input class = "address-input" type = "text" placeholder="Reportee Address" value="{{reporteeInfo.Address}}" readonly> 
                        </div>
                    </div>
                    <span class="section-name">Nature of Blotter</span>
                    <div class = "form-section">
                        <div class = "input-pair">
                            <input class = "nature-of-blotter-input" type = "text" placeholder="Nature of Blotter" value="{{case.natureOfBlotter}}" readonly>
                        </div>
                    </div>
                    <span class = "section-name">Respondent Information</span>
                    <div class = "form-section" id = "respondent-info">
                        <div class = "input-pair">
                            <label for="last-name-input">Last Name</label>
                            <input class = "last-name-input" type ="text" placeholder="Last Name" value="{{respondentInfo.LastName}}" readonly>
                        </div>
                        <div class = "input-pair">
                            <label for="middle-initial-input">Middle Initial</label>
                            <input class = "middle-name-input" type = "text" placeholder="M.I." maxlength="1" value="{{respondentInfo.MiddleInitial}}" readonly>
                        </div>
                        <div class = "input-pair">
                            <label for="first-name-input">First Name</label>
                            <input class = "first-name-input" type = "text" placeholder="First Name" value="{{respondentInfo.FirstName}}" readonly>
                        </div>
                    </div>
                    <span class = "section-name">Desk Officer Information</span>

                    <div class = "form-section" id = "desk-officer-information">
                        <div class = "input-pair">
                            <label for="last-name-input">Last Name</label>
                            <input class = "last-name-input" type ="text" placeholder="Last Name" value="{{deskInfo.LastName}}" readonly>
                        </div>
                        <div class = "input-pair">
                            <label for="middle-initial-input">Middle Initial</label>
                            <input class = "middle-name-input" type = "text" placeholder="M.I." maxlength="1" value="{{deskInfo.MiddleInitial}}" readonly>
                        </div>
                        <div class = "input-pair">
                            <label for="first-name-input">First Name</label>
                            <input class = "first-name-input" type = "text" placeholder="First Name" value="{{deskInfo.FirstName}}" readonly>
                        </div>
                    </div>
                    <span class = "section-name">Witness Information</span>
                    <div class = "form-section" id = "witness-information">
                        <div class = "input-pair">
                            <label for="last-name-input">Last Name</label>
                            <input class = "last-name-input" type ="text" placeholder="Last Name" value="{{witnessInfo.LastName}}" readonly>
                        </div>
                        <div class = "input-pair">
                            <label for="middle-initial-input">Middle Initial</label>
                            <input class = "middle-name-input" type = "text" placeholder="M.I." maxlength="1" value="{{witnessInfo.MiddleInitial}}" readonly>
                        </div>
                        <div class = "input-pair">
                            <label for="first-name-input">First Name</label>
                            <input class = "first-name-input" type = "text" placeholder="First Name" value="{{witnessInfo.FirstName}}" readonly>
                        </div>
                    </div>
                    <span class ="section-name">Location</h5>
                    <div class = "form-section" id="location">
                        <div class = "input-pair">
                            <input class = "location-input" type = "text" placeholder="Location" value="{{case.Location}}" readonly>
                        </div>
                    </div>
                </form>
            </div>  
        </div>
        <div class = "buttons-container">
            <a href="/restore-lupon-case/{{case._id}}"> 
            <button type="button" id="restoreButton" class="form-btn restore"><img src="/images/form-restore.png"><span>Restore record</span></button>

            </a>
        </div>
    </div>
</div>


