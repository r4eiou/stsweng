<link rel = "stylesheet" type = "text/css" href = "/css/back-button.css">
<div class = "main-container">
    <div class= "header " id="header">
        <div class = "header-left">
            <a href="/lupon-home" class="header-logo-link" id="home-link1"><img src="/images/logo.png" class="header-logo"></a>
            <a href="/lupon-home" class="header-home" id="home-link2"><h3>Home</h3></a>
        </div>
        
        <div class = "header-title">
            <div class = "header-text">
                <h3>Sangguniang Barangay ng Parang</h3>
                <h5>Marikina City</h5>
            </div>
        </div>
        <div class="header-right">
            <div class="header-user-profile">
                <span class="header-user-profile-text lupon" id="profile-text">Lupon</span>
                <img src="/images/lupon-profile.png" class="header-user-profile" id="profile-img">
            </div>
            <a href="/logout"><button type="button" class="header-logout-btn" id="logout-btn">Logout</button></a>
        </div>
    </div>
    
    
    <div class = "page-content-container" id="view-case-page">
        <div class="back-and-title">
        <div class="upper-container" id="form-upper-container">
            <a href="/lupon-home" class="back-button" id="black-back-button">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" fill="black" class="size-4">
                    <path fill-rule="evenodd" d="M1 8a7 7 0 1 0 14 0A7 7 0 0 0 1 8Zm10.25.75a.75.75 0 0 0 0-1.5H6.56l1.22-1.22a.75.75 0 0 0-1.06-1.06l-2.5 2.5a.75.75 0 0 0 0 1.06l2.5 2.5a.75.75 0 1 0 1.06-1.06L6.56 8.75h4.69Z" clip-rule="evenodd"></path>
                </svg>
                Back
            </a>
        </div>
        <h1 id = "lupon-case-title">Lupon Case Details</h1>
    </div>
        <div class = "form-encasing-container">
            <div class = "form-actual-container">
                <form id="case-form" class="case-form">
                    <div class = "form-section" id = "basic-info">
                        <div class = "column-section">
                            <label for="case-title" class ="bold-label">Case Title</label>
                            <input class = "case-title-input" id="case-title" type = "text" placeholder= "Case Title" value="{{case.CaseTitle}}" readonly>
                        </div>
                        <div class = "column-section">
                            <label for="case-type" class ="bold-label">Case Type</label>
                            <input class="case-type-input" type = "text" id = "case-type" placeholder="Case Type" value="{{case.CaseType}}" readonly>
                        </div>
                        <div class = "column-section1">
                            <label for="case-form" class ="bold-label">Status</label>
                            <select name="case-form" class="status-dropdown-view" selected = "1">
                                <option value="" selected disabled hidden>Select Status</option>
                                <option value="Resolved" {{resolveStat}}>Resolved</option>
                                <option value="Ongoing" {{ongoingStat}}>Ongoing</option>
                            </select>
                        </div>
                    </div>
                    <span class = "section-name">Respondent Information</span>
                    <div class = "form-section" id = "respondent-info">
                        <div class = "input-pair">
                            <label for="last-name-input">Last Name</label>
                            <input class = "last-name-input" type ="text" placeholder="Last Name" value="{{respondentInfo.LastName}}" readonly>
                        </div>
                        <div class = "input-pair">
                            <label for="middle-initial-input">Middle Initial</label>
                            <input class = "middle-name-input" type = "text" placeholder="M.I." maxlength="1" value="{{respondentInfo.MiddleInitial}}" readonly>
                        </div>
                        <div class = "input-pair">
                            <label for="first-name-input">First Name</label>
                            <input class = "first-name-input" type = "text" placeholder="First Name" value="{{respondentInfo.FirstName}}" readonly>
                        </div>
                    </div>
                    <span class = "section-name">Complainer Information</span>
                    <div class = "form-section" id = "complainer-info">
                        <div class = "input-pair">
                            <label for="last-name-input">Last Name</label>
                            <input class = "last-name-input" type ="text" placeholder="Last Name" value="{{complainerInfo.LastName}}" readonly>
                        </div>
                        <div class = "input-pair">
                            <label for="middle-initial-input">Middle Initial</label>
                            <input class = "middle-name-input" type = "text" placeholder="M.I." maxlength="1" value="{{complainerInfo.MiddleInitial}}" readonly>
                        </div>
                        <div class = "input-pair">
                            <label for="first-name-input">First Name</label>
                            <input class = "first-name-input" type = "text" placeholder="First Name" value="{{complainerInfo.FirstName}}" readonly>
                        </div>
                    </div>
                    <span class = "section-name">Mediation Information</span>
                    <div class = "form-section" id = "mediation-info">
                        <div class = "input-pair">
                            <label for="last-name-input">Last Name</label>
                            <input class = "last-name-input" type ="text" placeholder="Last Name" value="{{mediationInfo.LastName}}" readonly>
                        </div>
                        <div class = "input-pair">
                            <label for="middle-initial-input">Middle Initial</label>
                            <input class = "middle-name-input" type = "text" placeholder="M.I." maxlength="1" value="{{mediationInfo.MiddleInitial}}" readonly>
                        </div>
                        <div class = "input-pair">
                            <label for="first-name-input">First Name</label>
                            <input class = "first-name-input" type = "text" placeholder="First Name" value="{{mediationInfo.FirstName}}" readonly>
                        </div>
                    </div>
                    <span class = "section-name">Consilation Information</span>
                    <div class = "form-section" id = "consilation-information">
                        <div class = "input-pair">
                            <label for="last-name-input">Last Name</label>
                            <input class = "last-name-input" type ="text" placeholder="Last Name" value="{{conciliationInfo.LastName}}" readonly>
                        </div>
                        <div class = "input-pair">
                            <label for="middle-initial-input">Middle Initial</label>
                            <input class = "middle-name-input" type = "text" placeholder="M.I." maxlength="1" value="{{conciliationInfo.MiddleInitial}}" readonly>
                        </div>
                        <div class = "input-pair">
                            <label for="first-name-input">First Name</label>
                            <input class = "first-name-input" type = "text" placeholder="First Name" value="{{conciliationInfo.FirstName}}" readonly>
                        </div>
                    </div>
                    <span class ="section-name">Case</span>
                    <div class = "form-section" id="location">
                        <div class = "input-pair">
                            <textarea class = "location-input" id="case-description" type = "text" placeholder="Case Details" readonly>{{case.Case}}</textarea>
                        </div>
                    </div>
                </form>
            </div>  
        </div>
        <div class = "buttons-container">
            <a href="/lupon-mark-resolve/{{case._id}}" {{isEditable}}><button type="button" class="form-btn resolved" {{isEditable}}><img src="/images/form-check.png"><span>Mark as Resolved</span></button></a>
            <a href="/lupon-edit-case/{{case._id}}" {{isEditable}}><button type="button" class="form-btn edit" {{isEditable}}><img src="/images/form-edit.png"><span>Edit Data</span></button></a>
            <a href="/lupon-delete-case/{{case._id}}"><button type="button" class="form-btn delete"><img src="/images/form-trash.png"><span>Delete this record</span></button></a>
        </div>
    </div>
</div>